# EditorConfig helps maintain consistent coding styles across different editors
# https://editorconfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 100

# JavaScript and JSX files
[*.{js,jsx}]
indent_size = 2

# JSON files
[*.json]
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_size = 2

# Markdown files - preserve trailing whitespace for line breaks
[*.md]
trim_trailing_whitespace = false
max_line_length = off

# HTML files
[*.html]
indent_size = 2

# CSS files
[*.css]
indent_size = 2

# Package files
[package.json]
indent_size = 2

# Configuration files
[*.config.js]
indent_size = 2

# Makefiles use tabs
[Makefile]
indent_style = tab
